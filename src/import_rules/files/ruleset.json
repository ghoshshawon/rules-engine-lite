{
    "rules": [
        {
            "id": "high_amount",
            "when": {
                "all": [
                    {
                        "op": ">",
                        "left": "amount",
                        "right": 1000
                    }
                ]
            },
            "then": {
                "decision": "review",
                "score_delta": 20,
                "reason": "High amount"
            }
        },
        {
            "id": "ip_geo_mismatch",
            "when": {
                "any": [
                    {
                        "op": "!=",
                        "left": "payer.country",
                        "right": "payer.ip_country"
                    }
                ]
            },
            "then": {
                "decision": "deny",
                "score_delta": 50,
                "reason": "IP vs billing country mismatch"
            }
        }
    ],
    "defaults": {
        "decision": "approve",
        "base_score": 0
    }
}