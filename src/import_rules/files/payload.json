{
    "rules": [
        {
            "id": "high_amount",
            "when": {
                "all": [
                    {
                        "op": ">",
                        "left": "amount",
                        "right": 1000
                    },
                    {
                        "op": "in",
                        "left": "payer.country",
                        "right": [
                            "US",
                            "CA",
                            "GB"
                        ]
                    }
                ]
            },
            "then": {
                "decision": "review",
                "score_delta": 20,
                "reason": "High amount in supportedcountries"
            }
        },
        {
            "id": "geo_mismatch",
            "when": {
                "any": [
                    {
                        "op": "!=",
                        "left": "payer.country",
                        "right": "device.country"
                    },
                    {
                        "op": "!=",
                        "left": "payer.ip_country",
                        "right": "payer.country"
                    }
                ]
            },
            "then": {
                "decision": "deny",
                "score_delta": 50,
                "reason": "Geography mismatch"
            }
        }
    ],
    "defaults": {
        "decision": "approve",
        "base_score": 0
    }
}